<?xml version="1.0" encoding="utf-8"?>
<project>
	
	<meta title="AMatterOfLight" package="com.sample.project" version="0.0.1" company="Company Name" />
	<app main="Main" path="Export" file="AMatterOfLight" />
	
	<window fps="60" width="816" height="528" background="#000000"/>
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
	<source path="Source" />
	
	<haxelib name="openfl" />
	<haxeflag name="-swf-lib" value="lib/GameAnalytics.swc"/>
	
	<icon path="Assets/openfl.svg" />
	
	<assets path="Assets" rename="assets" exclude="openfl.svg" />
	<assets path="Assets/img" rename="img" />
	<assets path="Assets/levels" rename="levels" />
	<assets path="Assets/font" rename="fonts"/>
	<assets path="Assets/dialogs" rename="dialogs"/>
	
	<haxeflag name="--macro include('entities', true)" />
	<haxeflag name="--no-traces" if="release" />
	
</project>